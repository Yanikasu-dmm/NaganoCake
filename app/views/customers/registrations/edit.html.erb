<body class="bg-light">
 <div class="container">
  <div class="col-md-7 col-lg-8">
<h2 class="mb-3">Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "customers/shared/error_messages", resource: resource %>
 <div class="row g-3">
  <div class="col-sm-6">
   <div class="field">
    <%= f.label :last_name ,class:"form-label" %><br>
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name",class:"form-control"  %>
   </div>
   </div>


 <div class="col-sm-6">
  <div class="field">
    <%= f.label :first_name,class:"form-label" %><br/>
    <%= f.text_field :last_name, autofocus: true, autocomplete: "first_name",class:"form-control" %>
   </div>
  </div>
 </div>

 <div class="row g-3">
  <div class="col-sm-6">
   <div class="field">
    <%= f.label :last_name_kana,class:"form-label" %><br />
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana",class:"form-control"  %>
   </div>
  </div>
  
  <div class="col-sm-6">
   <div class="field">
    <%= f.label :first_name_kana,class:"form-label" %><br />
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" ,class:"form-control" %>
   </div>
  </div>
 </div>
 
 <div class="row g-3">
 <div class="col-12">
  <div class="field">
    <%= f.label :post_code,class:"form-label" %><br />
    <%= f.text_field :post_code, autofocus: true, autocomplete: "post_code",class:"form-control"  %>
  </div>
 </div>
 </div>
 
 <div class="row g-3">
 <div class="col-12">
  <div class="field">
    <%= f.label :address,class:"form-label" %><br />
    <%= f.text_field :address, autofocus: true, autocomplete: "address",class:"form-control"  %>
  </div>
 </div>
  </div>

<div class="row g-3">
 <div class="col-12">
  <div class="field">
    <%= f.label :email,class:"form-label" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class:"form-control" %>
  </div>
  </div>
  </div>
 
 <div class="row g-3">
 <div class="col-12">
  <div class="field">
    <%= f.label :email,class:"form-label" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class:"form-control" %>
  </div>
 </div>
 </div>
 
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

<div class="row g-3">
 <div class="col-12">
  <div class="field">
    <%= f.label :current_password,class:"form-label" %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password",class:"form-control"  %>
  </div>
   </div>
   
 </div>
 <div class="row g-3">
  <div class="actions col-8">
    <%= f.submit "Update",class:" btn btn-primary btn-success  mt-4"  %>
  </div>
<% end %>

 <div class="actions col-4">
 <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete ,class:" btn btn-primary btn-danger  mt-4"%>
 </div>
</div><br>
<%= link_to "Back", :back %>

  </div>          
 </div>