<div class="container">
  <div class="col-md-7 col-lg-8">
    <h2 class="mb-3">会員情報変更<%= resource_name.to_s.humanize %></h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "customers/shared/error_messages", resource: resource %>

      <div class="row g-3">
        <div class="col-sm-6">
          <div class="field">
            <%= f.label,姓 ,class:"form-label" %><br>
            <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", value: current_customer.last_name, class:"form-control"  %>
          </div>
        </div>


        <div class="col-sm-6">
          <div class="field">
            <%= f.label :名,class:"form-label" %><br/>
            <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", value: current_customer.first_name, class:"form-control" %>
          </div>
        </div>
      </div>

      <div class="row g-3">
        <div class="col-sm-6">
          <div class="field">
            <%= f.label :セイ,class:"form-label" %><br />
            <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", value: current_customer.last_name_kana, class:"form-control"  %>
          </div>
        </div>

        <div class="col-sm-6">
          <div class="field">
            <%= f.label :メイ,class:"form-label" %><br />
            <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" , value: current_customer.first_name_kana, class:"form-control" %>
          </div>
        </div>
      </div>

      <div class="row g-3">
        <div class="col-12">
          <div class="field">
            <%= f.label :郵便番号,class:"form-label" %><br />
            <%= f.text_field :post_code, autofocus: true, autocomplete: "post_code", value: current_customer.post_code, class:"form-control"  %>
          </div>
        </div>
      </div>

      <div class="row g-3">
        <div class="col-12">
          <div class="field">
            <%= f.label :住所,class:"form-label" %><br />
            <%= f.text_field :address, autofocus: true, autocomplete: "address", value: current_customer.address, class:"form-control"  %>
          </div>
        </div>
      </div>

      <div class="row g-3">
        <div class="col-12">
          <div class="field">
            <%= f.label :メールアドレス,class:"form-label" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" , class:"form-control" %>
          </div>
        </div>
      </div>

      <div class="row g-3">
        <div class="col-12">
          <div class="field">
            <%= f.label :電話番号,class:"form-label" %><br />
            <%= f.text_field :phone_number, autofocus: true, autocomplete: "email" , value: current_customer.phone_number, class:"form-control" %>
          </div>
        </div>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="row g-3">
        <div class="col-12">
          <div class="field">
            <%= f.label :current_password,class:"form-label" %> <i>(we need your current password to confirm your changes)</i><br />
            <%= f.password_field :current_password, autocomplete: "current-password",class:"form-control"  %>
          </div>
        </div>
      </div>

      <div class="row g-3">
        <div class="actions col-8">
          <%= f.submit "更新",class:" btn btn-success mt-4"  %>
        </div>

        <div class="actions col-4">
          <%= link_to "戻る", :back, class:" btn btn-primary mt-4"%>
        </div>
      </div>
    <% end %>
  </div>
</div>