<div class="container">
  <div class="row">
    <div class="title col-md-auto mt-5 bg-light text-dark">
      注文情報入力
    </div>
  </div>
  <div class="row">
    <%= form_with model: @order, :url => {:action => :confirm}, class: "w-100", local: true do |f| %>
      <div class="payment-form mt-3">
        <%= f.label :payment_method, '支払い方法' %>
        <ul class="list-unstyled ml-4">
          <li>
            <%= f.radio_button :payment_method, "credit_card", checked: true %>
            <%= f.label :payment_method, "クレジットカード" %>
          </li>
          <li>
            <%= f.radio_button :payment_method, "transfer" %>
            <%= f.label :payment_method, "銀行振込" %>
          </li>
        </ul>
      </div>
      <div class="address-form">
        <%= f.label :address_id, '配送先' %>
        <ul class="list-unstyled ml-4">
          <li>
            <%= f.radio_button :select_address, 0, checked: true %>
            <%= f.label :select_address, "ご自身の住所" %><br />
            <p class="ml-4"><%= @full_address %></p>
          </li>
          <li>
            <%= f.radio_button :select_address, 1 %>
            <%= f.label :select_address, "登録済み住所から選択" %><br />
            <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display) %>
          </li>
          <li>
             <%= f.radio_button :select_address, 2 %>
             <%= f.label :select_address, "新しいお届け先" %>
             <table>
               <th></th>
               <th></th>
               <th></th>
               <tr>
                 <td>
                   <%= f.label :post_code, "郵便番号", value: "" %>
                 </td>
                 <td>
                   <%= f.text_field :post_code, class: "ml-3" %>
                 </td>
               </tr>
               <tr>
                 <td>
                   <%= f.label :address, "住所" %>
                 </td>
                 <td colspan="2">
                   <%= f.text_field :address, value: "", class: "ml-3 w-auto" %>
                 </td>
               </tr>
               <tr>
                 <td>
                  <%= f.label :name, "宛名" %>
                 </td>
                 <td>
                   <%= f.text_field :name, value: "", class: "ml-3" %>
                 </td>
               </tr>
             </table>
          </li>
        </ul>
      </div>
      <%= f.hidden_field :postage, value: 800 %>
      <%= f.submit "確認画面へ進む", class: "btn btn-primary"  %>
    <% end %>
  </div>
</div>
