<h1>注文情報入力</h1>

<%= form_with model: @order, :url => {:action => :comfirm}, local: true do |f| %>
  <%= f.label :payment_method, '支払い方法' %>
  <%= f.radio_button :payment_method, "credit_card" %>
  <%= f.label :payment_method, "クレジットカード" %>

  <%= f.radio_button :payment_method, "transfer" %>
  <%= f.label :payment_method, "銀行振込" %>

  <%= f.label :address_id, '配送先' %>
  <%= f.radio_button :select_address, 0 %>
  <%= f.label :select_address, "自身の住所" %>
  <%= f.radio_button :select_address, 1 %>
  <%= f.label :select_address, "登録済み住所" %>
  <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display) %>
  <%= f.radio_button :select_address, 2 %>
  <%= f.label :select_address, "別の住所" %>
  <%= f.label :post_code, "郵便番号", value: "" %>
  <%= f.text_field :post_code %>
  <%= f.label :address, "住所" %>
  <%= f.text_area :address, value: "" %>
  <%= f.label :name, "宛名" %>
  <%= f.text_field :name, value: "" %>

  <%= f.submit %>



<% end %>