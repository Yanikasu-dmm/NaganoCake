<div class="container">
  <div class="row pl-5">
    <div class="title col-md-auto mt-5 bg-light text-dark mb-4">
      注文履歴詳細
    </div>
  </div>
  <div class="row">
    <div class="col-6">
      <p>注文情報</p>
      <table class="table table-bordered">
        <tbody>
          <tr>
            <td class="bg-light">注文日</td>
            <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
          <tr>
            <td class="bg-light">配送先</td>
            <td>
              <%= '〒' + @order.post_code + ' ' + @order.address + ' ' + @order.name %>
            </td>
          </tr>
          <tr>
            <td class="bg-light">支払方法</td>
            <td><%= @order.payment_method_i18n %></td>
          </tr>
          <tr>
            <td class="bg-light">ステータス</td>
            <td><%= @order.status_i18n %></td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-4 ml-5">
      <p>請求情報</p>
      <table class="table table-bordered">
        <tbody>
          <tr>
            <td class="bg-light">商品合計</td>
            <td><%= @order.total_price %></td>
          </tr>
          <tr>
            <td class="bg-light">配送料</td>
            <td><%= @order.postage %></td>
          </tr>
          <tr>
            <td class="bg-light">ご請求額</td>
            <td><%= @order.total_price + @order.postage %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-8">
      <p>注文内容</p>
      <table class="table table-bordered mt-3">
        <thead class="bg-light">
          <th>商品</th>
          <th>単価(税込)</th>
          <th>個数</th>
          <th>小計</th>
        </thead>
        <tbody>
          <% @order_details.each do |order_detail| %>
            <tr>
              <td><%= order_detail.item.name %></td>
              <td><%= order_detail.item.price %></td>
              <td><%= order_detail.amount %></td>
              <td><%= order_detail.item.price * order_detail.amount %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
