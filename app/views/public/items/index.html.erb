<div class="container">
 <div class="row">
  <div class="col-md-3">
    <table class="table table-striped">
     <thead>
      <tr>ジャンル検索</tr>
     </thead>
     <tbody>
      <% @genres.each do |genre| %>
       <tr><td><%= link_to genre.name, items_path(genre_id: genre.id) %></td></tr>
      <% end %>
     </tbody>
    </table>
  </div>

<div class="col-md-9">
<% if params[:genre_id] %>
<h3 class="m-3"><%= @genre.name %> 一覧（全<%= @items.count %>件）</h3>
<% else %>
<h3 class="m-3"> 商品一覧（全<%= @items.count %>件）</h3>
<% end %>
  <div class="container">
   <div class="row">
   <% @items.each do |items| %>
   <div class="col-md-4">
      <%= link_to item_path(items.id) do %>
       <h3><%= image_tag items.get_image, size: '100x100' %></h3>
      <% end %>
       <p><%= items.name%></p>
      <p><%= items.price.to_s + "円" %></p>
     </div>
   <% end %>

   </div>
  </div>
 </div>
</div>
