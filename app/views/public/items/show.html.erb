<div class="container">
  <div class="row">
  <div class="col-md-3">
    <table class="table table-striped">
     <thead>
      <tr>ジャンル検索</tr>
     </thead>
     <tbody>
      <% @genres.each do |genre| %>
       <tr><td><%= link_to genre.name, '#' %></td></tr>
      <% end %>
     </tbody>
    </table>
  </div>
  <div class="col-md-9">
    <div class="container">
      <div class="row">
        <div class="col-md-5"><%= image_tag @item.get_image, size: '200x200'%></div>
        <div class="col-md-7">
          <p><%= @item.name %></p>
          <p><%= @item.introduction %></p>
          <%= @item.price %><strong>(税込み)</strong>
        
          <%= form_with model: @cart_item, url: public_cart_items_path, method: :post, local: true do |f| %>
            <%= f.hidden_field :customer_id, value: current_customer.id %>
            <%= f.hidden_field :item_id, value: @item.id %>
            <%= f.number_field :amount %>
            <%= f.submit "add_to_cart", class: "btn btn-success" %>
          <% end %>
          </div>
      </div>
    </div>
  </div>
</div>