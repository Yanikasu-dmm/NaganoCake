<h1>public/show</h1>

  <%= @item.name %>
  <%= @item.introduction %>
  <%= @item.price%><p>(税込み)</p>

  <%= form_with model: [@cart_item, @item], url: public_add_item_path, method: :post, local: true do |f| %>
    <%= f.hidden_field :item_id, value: @item.id %>
    <%= f.number_field :amount %>
    <%= f.submit "add_to_cart" %>
  <% end %>
