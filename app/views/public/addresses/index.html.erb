<h1>配送先登録/一覧</h1>

<%= form_with model: @new_addrese, local: true do |f| %>
  <%= f.hidden_field :customer_id, value: current_customer.id %>
  <li>郵便番号（ハイフンなし）</li>
  <%= f.text_field :post_code %>
  <li>住所</li>
  <%= f.text_area :address %>
  <li>宛名</li>
  <%= f.text_field :name %>
  <%= f.submit "新規登録", class: "btn btn-success" %>
<% end %>


  <table>
    <thead>
      <tr>
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
        <th></th>
      </tr>
    </thead>
    <% @addresses.each do |addresses| %>
    <tr>
      <td><%= addresses.post_code %></td>
      <td><%= addresses.address %></td>
      <td><%= addresses.name %></td>
      <td>
        <%= link_to '編集する', edit_public_address_path, class: "btn btn-success" %>
        <%= link_to '削除する', destroy_public_address_path, method:delete, "data-confirm" => "本当に削除しますか？" %>
      </tr>
    </tbody>
    <% end %>
  </table>

