<body class="bg-light">
 <div class="container">
  <div class="col-md-7 col-lg-8">
<h2 class="mb-3">Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "admins/shared/error_messages", resource: resource %>

<div class="row g-3">
  <div class="col-sm-6">
   <div class="field">
    <%= f.label :メールアドレス,class:"form-label" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control"%>
  </div>
  </div>
</div>  

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

<div class="row g-3">
 <div class="col-12">
  <div class="field">
    <%= f.label :パスワード,class:"form-label" %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "new-password",class:"form-control" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> 桁以上</em>
    <% end %>
  </div>
 </div>
</div>  
   
  
<div class="row g-3">
 <div class="col-12">
  <div class="field">
    <%= f.label :パスワード（確認用）,class:"form-label" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"form-control" %>
  </div>
</div>
</div>  
  
  
<div class="row g-3">
 <div class="col-12">
  <div class="field">
    <%= f.label :current_password,class:"form-label" %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password",class:"form-control" %>
  </div>
</div>
</div>
  
<div class="row g-3">
  <div class="actions">
    <%= f.submit "更新" ,class:" btn btn-primary btn-success  mt-4" %>
  </div>
<% end %>

<div class="actions col-4">
<%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete,class:" btn btn-primary btn-danger  mt-4" %></p>
 </div>
</div><br>
<%= link_to "戻る", :back %>

</div>
</div>