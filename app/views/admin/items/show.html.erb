<div class= "container">
 <h4>商品詳細</h4>
 <div class= "row">
  <div class="col-lg-4">
   <% if @item.image.present? %>
    <%= image_tag @item.image,size: '300x200' %>
   <% else %>
    <%= image_tag "no_image", size: '300x200'%>
   <% end %>
  </div>
  <div class="col-lg-8">
   <table class = "table table-borderless">
    <tbody>
     <tr>
     <td>商品名</td>
      <td><%= @item.name %></td>
     </tr>
     <tr>
      <td>商品説明</td>
      <td><%= @item.introduction %></td>
     </tr>
     <tr>
      <td>ジャンル</td>
      <td>
       <% @item.genres.each do |genre| %>
        <%= genre.name %>
       <% end %>
      </td>
     </tr>
     <tr>
      <td>税込価格<br>（税抜価格）</td>
      <td><%= @item.price.to_s + "円" %>  (<%= @item.get_tax_include_price.to_s + "円" %>)</td>
     </tr>
     <tr>
      <td>販売ステータス</td>
      <td>
       <% if @item.is_active %>
        <span class="text-secondary">販売停止中</span>
       <% else %>
        <span class="text-success">販売中</span>
       <% end %>
      </td>
     </tr>
    </tbody>
   </table>
   <%= link_to "編集する",edit_admin_item_path(@item.id),class:"btn btn-sm btn-success" %>
  </div>
 </div>
</div>