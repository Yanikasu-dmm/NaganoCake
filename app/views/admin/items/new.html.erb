<div class= "container">
 <div class="col-md-7 col-lg-8">
 <h4>商品新規登録</h4>
   <%= form_with model:@item, :url => {:action => :create} do |f| %>
    
    <div class="form-group">
     <label for="items_imege">商品画像</label>
     <div class="col-auto">
      <%= f.file_field :image %>
     </div>
    </div>
    

    <div class="form-group">
     <label for="items_name">商品名</label>
     <div class="col-auto">
      <%= f.text_field :name,class:"form-control" %>
     </div>
    </div>

    <div class="form-group">
     <label for="items_introduction">商品説明</label>
     <div class="col-auto">
      <%= f.text_area :introduction ,class:"form-control"%>
     </div>
    </div>

    <div class="form-group">
     <label for="items_genre_id">ジャンル</label>
     <div class="col-auto">
      <%= f.text_field :genre,class:"form-control" %>
     </div>
    </div>

    <div class="form-group">
     <label for="items_price">税抜価格</label>
     <div class="col-auto">
      <%= f.number_field :price,class:"form-control" %>
     </div>
    </div>

    <div class="form-group">
     <label for="items_is_active">販売ステータス</label>
      <%= f.radio_button :is_active, true %>
      <%= f.label :is_active, "販売中" %>
      <%= f.radio_button :is_active, false %>
      <%= f.label :is_active, "販売停止中" %>
    </div>
    
    <div class="actions col-8">
    <%= f.submit '新規登録',class:"btn btn-sm btn-success" %>
    </div>
    <% end %>
  </div>
</div>

