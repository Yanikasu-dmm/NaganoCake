<h2>商品新規登録</h2>

<%= form_with model:@item do |f| %>
<div class="form-group">
 <label for="items_imege">商品画像</label>
 <%= f.text_field :image %>
</div>

<div class="form-group">
 <label for="items_name">商品名</label>
 <%= f.text_field :name %>
</div>

<div class="form-group">
 <label for="items_introduction">商品説明</label>
 <%= f.text_field :introduction %>
</div>

<div class="form-group">
 <label for="items_genre_id">ジャンル</label>
 <%= f.text_field :genre_id %>
</div>

<div class="form-group">
 <label for="items_price">税抜価格</label>
 <%= f.text_field :price %>
</div>

<div class="form-group">
 <label for="items_is_active">販売ステータス</label>
 <%= f.text_field :is_active %>
</div>

<%= f.submit '新規登録'%>

<% end %>