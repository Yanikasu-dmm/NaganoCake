<div class= "container">
 <h4>商品新規登録</h4>
  <div class= "row justify-content-md-center">
   <%= form_with model:@item, :url => {:action => :create} do |f| %>

    <div class="form-group row">
     <label for="items_imege",class="col-auto col-form-label">商品画像</label>
     <div class="col-auto">
      <%= f.file_field :image %>
     </div>
    </div>

    <div class="form-group row">
     <label for="items_name",class="col-auto col-form-label">商品名</label>
     <div class="col-auto">
      <%= f.text_field :name %>
     </div>
    </div>

    <div class="form-group row">
     <label for="items_introduction",class="col-auto col-form-label">商品説明</label>
     <div class="col-auto">
      <%= f.text_area :introduction %>
     </div>
    </div>

    <div class="form-group row">
     <label for="items_genre_id",class="col-auto col-form-label">ジャンル</label>
     <div class="col-auto">
      <%= f.text_field :genre %>
     </div>
    </div>

    <div class="form-group row">
     <label for="items_price",class="col-auto col-form-label">税抜価格</label>
     <div class="col-auto">
      <%= f.number_field :price %>
     </div>
    </div>

    <div class="form-group row">
     <label for="items_is_active">販売ステータス</label>
      <%= f.radio_button :items_is_active, true %>
      <%= f.label :is_active, "販売中" %>
      <%= f.radio_button :items_is_active, false %>
      <%= f.label :is_active, "販売停止中" %>
    </div>
    

    <%= f.submit '新規登録',class:"btn btn-sm btn-success" %>
    <% end %>
  </div>
</div>

