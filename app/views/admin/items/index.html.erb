<div class = "container">
 <div class ="row">
  <div class="col-md-10">
   <h4>商品一覧</h4>
  </div>
 
   <div class="col-md-2 ms-auto">
  	 <%= link_to new_admin_item_path do %>
  		 <span>新規商品登録</span>
  	 <% end %>
   </div>
 </div><br>
 
 <div class ="row">
  <table class = "table table-borderless">
   <thead class="table-active">
    <th>商品ID</th>
    <th>商品名</th>
    <th>税抜価格</th>
    <th>ジャンル</th>
    <th>ステータス</th>
   </thead>
   <% @items.each do |item| %>
   <tbody>
    <td><%= item.id %></td>
    <td><%=link_to item.name, admin_item_path(item.id) %></td>
    <td><%= item.price %></td>
    <td>
     <% item.genres.each do |genre| %>
      <%= genre.name %>
     <% end %>
    </td>
    <td>
     <% if item.is_active %>
      <span class="text-secondary">販売停止中</span>
     <% else %>
      <span class="text-success">販売中</span>
     <% end %>
    </td>
   </tbody>
   <% end %>
  </table>
 </div>
</div>
