<div class="container mt-3">
  <div class="row justify-content-between mb-4">
      <div class="title col-md-auto px-auto">
        <p class="text-dark bg-light text-center">注文履歴一覧</p>
      </div>
  </div>
  <div class="row">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th scope="col" class="col-2">注文日時</th>
          <th scope="col" class="col-2">購入者</th>
          <th scope="col" class="col-2">個数</th>
          <th scope="col" class="col-2">注文ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
        <tr>
          <th scope="row">
            <%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
          </th>
          <td><%= order.name %></td>
          <td><%= OrderDetail.where(order_id: order.id).sum(:amount).to_s + "個" %></td>
          <td><%= order.status_i18n %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
