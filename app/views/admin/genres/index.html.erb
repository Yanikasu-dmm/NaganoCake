<div class = "container">
 <div class ="row">
  <div class="col-md-10">
   <h4>ジャンル一覧・追加</h4>
  </div>
　
　<%= form_with model:@genre, url: admin_genres_path, local:true do |f| %>
　<div class = "row">
　 <label>ジャンル</label>
　 <%= f.text_field :name %>
　 <%= f.submit '新規登録',class:"btn btn-sm btn-success" %>
　</div>
　<% end %>

 <table class = "table">
  <thead>
   <tr>
    <th>ジャンル</th>
    <th></th>
   </tr>
  </thead>
  <tbody>
   <% @genres.each do |genre| %>
   <tr>
    <td><%= genre.name %></td>
    <td>
     <%= link_to '編集する', edit_admin_genre_path(genre.id), class: "btn btn-success" %>
    </td>
   </tr>
   <% end %>
  </tbody>
 </table>
 </div>
</div>