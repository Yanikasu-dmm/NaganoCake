<div class= "container">
 <div class ="row">
   <h4>会員一覧</h4>
 </div><br>
 
 <div class ="row">
  <table class = "table">
   <thead class="table-active">
     <th>会員ID</th>
     <th>氏名</th>
     <th>メールアドレス</th>
     <th>ステータス</th>
   </thead>
    <% @customers.each do |customer| %>
    <tbody>
     <td><%= customer.id %></td>
     <td>
      <%=link_to admin_customer_path(customer.id) do %>
       <%= customer.last_name %> <%= customer.first_name %>
      <% end %>
     </td>
     <td><%= customer.email %></td>
     <td><%= customer.is_deleted ? "退会" : "有効" %></td>
    </tbody>
    <% end %>
   </table>
 </div>