<h1>会員情報編集</h1>

<%= form_with model:@customer, :url => {:action => :update} do |f| %>

 <div>
　<label for="customer_id">会員ID</label>
　<%= @customer.id %>
 </div>

 <div class="form-group">
  <label for="customer_name">氏名</label>
   <%= f.text_field :last_name %>
   <%= f.text_field :first_name %>
 </div>
 
 <div class="form-group">
  <label for="customer_name_kana">フリガナ</label>
   <%= f.text_field :last_name_kana %>
   <%= f.text_field :first_name_kana %>
 </div>

 <div class="form-group">
  <label for="customer_post_code">郵便番号</label>
   <%= f.text_field :post_code %>
 </div>

 <div class="form-group">
  <label for="customer_address">住所</label>
   <%= f.text_field :address %>
 </div>

 <div class="form-group">
  <label for="customer_phone_number">電話番号</label>
   <%= f.text_field :phone_number %>
 </div>

 <div class="form-group">
  <label for="customer_email">メールアドレス</label>
   <%= f.email_field :email %>
 </div>

 <div class="form-group">
  <label for="customer_is_deleted">会員ステータス</label>
   <%= f.select :is_deleted, [["True", true], ["False", false]] %>
 </div>
 
 <%= f.submit '変更を保存'%>

<% end %>
 